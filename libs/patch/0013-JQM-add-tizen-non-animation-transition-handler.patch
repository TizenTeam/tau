From: Minkyu Kang <mk7.kang@samsung.com>
Date: Fri, 11 May 2012 09:18:16 +0900
Subject: [PATCH] JQM: add tizen non-animation transition handler

Signed-off-by: Minkyu Kang <mk7.kang@samsung.com>
---
 .../js/jquery.mobile.navigation.js                 |   19 ++++++++++++++++++-
 1 files changed, 18 insertions(+), 1 deletions(-)

diff --git a/libs/js/jquery-mobile-1.0.1pre/js/jquery.mobile.navigation.js b/libs/js/jquery-mobile-1.0.1pre/js/jquery.mobile.navigation.js
index 1bf187f..78af32f 100755
--- a/libs/js/jquery-mobile-1.0.1pre/js/jquery.mobile.navigation.js
+++ b/libs/js/jquery-mobile-1.0.1pre/js/jquery.mobile.navigation.js
@@ -630,8 +630,25 @@
 		return $.Deferred().resolve( name, reverse, $toPage, $fromPage ).promise();
 	};
 
+	//tizen non-animation transition handler
+	$.mobile.tizenTransitionHandler = function( name, reverse, $toPage, $fromPage ) {
+		var deferred = new $.Deferred(),
+		    doneFunc = function () {
+			if ( $fromPage ) {
+				$fromPage.removeClass( $.mobile.activePageClass );
+			}
+			$toPage.addClass( $.mobile.activePageClass );
+
+			deferred.resolve( name, reverse, $toPage, $fromPage );
+		    };
+
+		setTimeout( doneFunc, 0);
+
+		return deferred.promise();
+	};
+
 	//default handler for unknown transitions
-	$.mobile.defaultTransitionHandler = $.mobile.noneTransitionHandler;
+	$.mobile.defaultTransitionHandler = $.mobile.tizenTransitionHandler;
 
 	//transition handler dictionary for 3rd party transitions
 	$.mobile.transitionHandlers = {
