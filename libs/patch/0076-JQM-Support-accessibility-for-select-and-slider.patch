From c3ae1ee3248679aa8305cd0d33aa0e2e52e1bbd2 Mon Sep 17 00:00:00 2001
From: "hk0713.cho" <hk0713.cho@samsung.com>
Date: Fri, 6 Dec 2013 09:40:34 +0900
Subject: [PATCH] JQM Support accessibility for select and slider

---
 .../jquery-mobile-1.2.0/js/widgets/forms/select.js |    3 ++-
 .../jquery-mobile-1.2.0/js/widgets/forms/slider.js |    8 --------
 2 files changed, 2 insertions(+), 9 deletions(-)

diff --git a/libs/js/jquery-mobile-1.2.0/js/widgets/forms/select.js b/libs/js/jquery-mobile-1.2.0/js/widgets/forms/select.js
index fb462c9..79e33b3 100644
--- a/libs/js/jquery-mobile-1.2.0/js/widgets/forms/select.js
+++ b/libs/js/jquery-mobile-1.2.0/js/widgets/forms/select.js
@@ -110,7 +110,8 @@ $.widget( "mobile.selectmenu", $.mobile.widget, {
 					shadow: options.shadow,
 					iconshadow: options.iconshadow,
 					mini: mini
-				});
+				})
+				.removeAttr( "tabindex" );
 
 		this.setButtonText();
 
diff --git a/libs/js/jquery-mobile-1.2.0/js/widgets/forms/slider.js b/libs/js/jquery-mobile-1.2.0/js/widgets/forms/slider.js
index e5ccaad..baf74e9 100644
--- a/libs/js/jquery-mobile-1.2.0/js/widgets/forms/slider.js
+++ b/libs/js/jquery-mobile-1.2.0/js/widgets/forms/slider.js
@@ -280,11 +280,7 @@ $.widget( "mobile.slider", $.mobile.widget, {
 				switch ( event.keyCode ) {
 					case $.mobile.keyCode.HOME:
 					case $.mobile.keyCode.END:
-					case $.mobile.keyCode.PAGE_UP:
-					case $.mobile.keyCode.PAGE_DOWN:
-					case $.mobile.keyCode.UP:
 					case $.mobile.keyCode.RIGHT:
-					case $.mobile.keyCode.DOWN:
 					case $.mobile.keyCode.LEFT:
 						event.preventDefault();
 
@@ -303,13 +299,9 @@ $.widget( "mobile.slider", $.mobile.widget, {
 					case $.mobile.keyCode.END:
 						self.refresh( max );
 						break;
-					case $.mobile.keyCode.PAGE_UP:
-					case $.mobile.keyCode.UP:
 					case $.mobile.keyCode.RIGHT:
 						self.refresh( index + step );
 						break;
-					case $.mobile.keyCode.PAGE_DOWN:
-					case $.mobile.keyCode.DOWN:
 					case $.mobile.keyCode.LEFT:
 						self.refresh( index - step );
 						break;
